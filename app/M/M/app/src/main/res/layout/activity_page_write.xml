<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/page_write_close_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/page_write_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시물 작성"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textColorHint="@color/black"
            app:layout_constraintTop_toTopOf="@id/page_write_close_iv"
            app:layout_constraintBottom_toBottomOf="@id/page_write_close_iv"
            app:layout_constraintStart_toEndOf="@id/page_write_close_iv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            android:textColor="@color/white"
            android:background="@drawable/background_ic_btn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/page_write_edit_platform_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플랫폼"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/page_write_close_iv"
            app:layout_constraintTop_toBottomOf="@id/page_write_close_iv"/>

        <LinearLayout
            android:id="@+id/page_write_platform_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_platform_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_ic_category_unselect"
                android:text="제페토"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:elevation="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="25dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/page_write_edit_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/page_write_close_iv"
            app:layout_constraintTop_toBottomOf="@id/page_write_platform_layout"/>

        <LinearLayout
            android:id="@+id/page_write_category_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_category_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_ic_category_unselect"
                android:text="맵"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:elevation="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_ic_category_unselect"
                android:text="옷"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:elevation="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_ic_category_unselect"
                android:text="악세사리"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:elevation="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginStart="25dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/page_write_edit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/page_write_close_iv"
            app:layout_constraintTop_toBottomOf="@id/page_write_category_layout"/>

        <EditText
            android:id="@+id/page_write_edit_title_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="제목"
            android:textColorHint="@color/gray"
            android:background="@drawable/background_edit_page"
            android:elevation="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_title_tv"/>

        <TextView
            android:id="@+id/page_write_edit_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/page_write_close_iv"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_title_et"/>

        <EditText
            android:id="@+id/page_write_edit_price_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="가격"
            android:textColorHint="@color/gray"
            android:background="@drawable/background_edit_page"
            android:elevation="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_price_tv"/>


        <TextView
            android:id="@+id/page_write_edit_body_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="@id/page_write_close_iv"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_price_et"/>

        <EditText
            android:id="@+id/page_write_edit_body_et"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:hint="내용"
            android:textColorHint="@color/gray"
            android:background="@drawable/background_edit_page"
            android:gravity="top"
            android:elevation="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_body_tv"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:layout_constraintTop_toBottomOf="@id/page_write_edit_body_et"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</ScrollView>